    <destinations default="slurm_1slot">
        <!-- SLURM CPU Queues -->
        <destination id="slurm_1slot" runner="slurm">
            <param id="nativeSpecification">--nodes=1 --ntasks=1 --ntasks-per-node=1 --mem=3880</param>
        </destination>
        <destination id="slurm_2slots" runner="slurm">
